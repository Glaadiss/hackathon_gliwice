<h3> Wszystkie zarejestrowane firmy </h3>
<br><br>
<table class = "table table-striped">
  <thead>
    <tr>
      <th> # </th>
      <th> Nazwa firmy </th>
      <th> NIP </th>
      <th> Adres siedziby </th>
      <th> Imię </th>
      <th> Nazwisko </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td> <%= company.id %> </td>
        <td> <%= company.name %> </td>
        <td> <%= company.nip %> </td>
        <td> <%= company.address %> </td>
        <td> <%= company.user&.firstname %> </td>
        <td> <%= company.user&.lastname %> </td>
        <td><%= link_to 'Pokaż szczegóły', company_path(company), class: 'btn btn-primary btn-xs' %> </td>
      </tr>
    <% end %>
  <tbody>
</table>
