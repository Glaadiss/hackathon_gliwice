<%= simple_form_for @company do |f| %>
  <%= f.input :name, label: "Nazwa firmy" %>
  <%= f.input :nip, label: "Numer identyfikacji podatkowej (NIP)" %>
  <%= f.input :map, as: :hidden %>
  <%= f.input :address, label: "Podaj adres" %>
  <%= f.input :description, label: "Czym się zajmuje Twoja firma?" %>
  <%= f.button :submit, "Dodaj firmę"%>
<% end %>
