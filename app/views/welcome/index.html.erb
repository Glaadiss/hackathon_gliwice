<body>

    <!-- Navigation -->


    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">

                      <%= link_to new_user_registration_path(role: 0) do %>
                        <div class="col-md-6">
                          <img src = "images/avatar1.png" class="emplo">
                          <div class="desc">
                            <h1>Jestem pracownikiem</h1>
                            <h2>Szukam pracy</h2>
                          </div>
                        </div>
                      <% end %>
                      <%= link_to new_user_registration_path(role: 1) do %>
                        <div class="col-md-6">
                          <img src = "images/avatar2.png" class="emplo">
                          <div class="desc">
                            <h1>Jestem pracodawcą</h1>
